{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "builder": "dockerfile"
    },
    "deploy": {
      "startCommand": "python scripts/start_dashboard.py",
      "healthcheckPath": "/api/system/status",
      "healthcheckTimeout": 10,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 3
    }
  }