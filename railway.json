{
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "startCommand": "bash -c 'python scripts/run_live_trading_with_health.py ml_basic & python scripts/start_dashboard.py --host 0.0.0.0 --port ${PORT:-8080}'",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}