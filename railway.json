{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfile": "Dockerfile"
  },
  "deploy": {
    "startCommand": "./start.sh python run_live_trading.py adaptive",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10,
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "ENVIRONMENT": "production",
        "PYTHONPATH": "/app",
        "PYTHONUNBUFFERED": "1",
        "HEALTH_CHECK_PORT": "8000"
      }
    },
    "staging": {
      "variables": {
        "ENVIRONMENT": "staging",
        "PYTHONPATH": "/app",
        "PYTHONUNBUFFERED": "1",
        "HEALTH_CHECK_PORT": "8000"
      }
    }
  }
}